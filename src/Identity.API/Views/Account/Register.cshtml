

<div class="account-container  container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="text-center mb-4">
                <h4>Sign up</h4>
                <p class="text-muted mb-4">Get your Chatvia account now.</p>
            </div>

            <div class="card">
                <div class="card-body p-4">
                    <div class="p-3">
                          @Html.CleanValidationSummary(false)
                            <div class="form-group">
                                <label>Email</label>
                                <div class="input-group mb-3 bg-soft-light input-group-lg rounded-lg">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text border-light text-muted">
                                            <i class="ri-mail-line"></i>
                                        </span>
                                    </div>
                                    <input type="email" class="form-control bg-soft-light border-light" placeholder="Enter Email">
                                </div>
                            </div>
                            <div class="form-group mb-4">
                                <label>Password</label>
                                <div class="input-group mb-3 bg-soft-light input-group-lg rounded-lg">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text border-light text-muted">
                                            <i class="ri-lock-2-line"></i>
                                        </span>
                                    </div>
                                    <input type="password" class="form-control bg-soft-light border-light" placeholder="Enter Password">

                                </div>
                            </div>
                            <div class="form-group mb-4">
                                <label>Verify code</label>
                                <div class="input-group mb-3 bg-soft-light input-group-lg rounded-lg">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text border-light text-muted">
                                            <i class="ri-lock-2-line"></i>
                                        </span>
                                    </div>
                                    <div class="input-group-prepend">
                                        <input type="text" class="form-control bg-soft-light border-light" placeholder="Verify Code">
                                    </div>
                                    <div class="input-group-prepend" style="flex: 1;text-align: right;">
                                        <button class="btn btn-primary btn-block waves-effect waves-light" id="verify"  data-loading-text="Loading..." >Send</button>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Sign up</button>
                            </div>
                            <div class="mt-4 text-center">
                                <p class="text-muted mb-0">By registering you agree to the Chatvia <a href="#" class="text-primary">Terms of Use</a></p>
                            </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
(function () {
'use strict'
    const disable = (time, $dom) => {
        if (time === 0) {
            clearInterval(timer);
            $dom.attr('disabled', false);
            $dom.html("send");
            time = 60;
            return;
        } else {
            $dom.attr('disabled', true);
            $dom.html(`${time} second`);
            time--;
        }
        let timer = setTimeout(() => {
            disable(time, $dom)
        }, 1000);
    }

    $("#verify").click(function (e) {
        e.preventDefault();

        let $this = $(this);
        $this.button('loading');
        $.post("", {}, function (resp) {
            $this.button('reset');
            disable(60, $this);
        });
    });
})()
</script>
}
